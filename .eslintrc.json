{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn"], // Change to "off" if you want to ignore unused vars
    "@typescript-eslint/no-explicit-any": "warn", // Change to "off" if you want to allow 'any'
    "react/no-unescaped-entities": "warn", // Change to "off" if you want to ignore unescaped entities
    "react-hooks/exhaustive-deps": "warn" // Warn about missing dependencies in useEffect
  }
}
